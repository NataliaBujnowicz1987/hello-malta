<% include ../partials/header %>
   
   <div id="contact-container">
       
        <p class="welcomebox" style="background-color: orange; padding:10px 0">Edit place, description, photo etc.</p>

        <div class="addnew">   
    
            <% res1.forEach(function(malta) {%> 
        
            <form accept-charset="UTF-8" ref="uploadForm" action="/editmalta/<%= malta.Id %>" method="post" enctype="multipart/form-data">
                <label for="place">Place:</label>
                <input name="place" type="text" value="<%= malta.Place %>", pattern="^[a-zA-Z ]+$", title="Use only letters, please", required/><br>
                    
                <label for="description">Description:</label>
                <input name="description" type="text" value="<%= malta.Description %>", required/><br>
                    
                <label for="activity">Activity:</label>
                <input name="activity" type="text" value="<%= malta.Activity %>", pattern="^[a-zA-Z ]+$", title="Use only letters, please", required/><br>
                        
                <label for="image">Image:</label>
                <input style="color:red", type="text" value="The image has been uploaded."><br>
                
                <label for="name">Your name:</label>
                <input name="name" type="text" value="<%= malta.Name %>", pattern="^[a-zA-Z ]+$", title="Use only letters, please" required/><br>
                
                <label for="date">Date:</label>
                <input name="date" type="text" value="<%= malta.Date %>", required/>
                
                <br><br>
                <button class="button">Edit</button>
            </form>

            <% }); %>
        </div>
        
    </div>


<% include ../partials/footer %>